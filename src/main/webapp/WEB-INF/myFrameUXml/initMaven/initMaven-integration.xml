<?xml version="1.0" encoding="UTF-8"?>
<initMaven>
	<!-- 初始化的实体类 -->
	<initMavenClass>myFrameU.integration.init.InitMavenImpl</initMavenClass>
	
	<!-- 初始化积分系统和其他角色之间的字段属性 -->
	<integration-role-caseField>
	    <irc roleName="myFrame.shop.entity.Shop" gradeField="grade" totalField="totalScore"></irc>
	    <irc roleName="myFrame.user.entity.User" gradeField="grade" totalField="totalScore"></irc>
	</integration-role-caseField>
	
	
	
	
	<!-- 初始化规则 -->
	<itemRules>
	    <itemRule roleName="myFrame.shop.entity.Shop">
	          <rule actionType="updateLogo" fraction="5" itemEvent="店铺上传logo,+5积分"></rule>
	          <rule actionType="updateBanner" fraction="5" itemEvent="店铺更新banner,+5积分"></rule>
	    </itemRule>
	</itemRules>
	
	
	
	
</initMaven>